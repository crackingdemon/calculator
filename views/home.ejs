    <script>

        //for Electricity
        function electricityConverter(valNum) {
            valNum = parseFloat(valNum);
            document.getElementById("elec").innerHTML = (valNum * 43.2) ? (valNum * 43.2).toFixed(2) : 0;
            addHome();
            addTotal();
        }

        //for Lpg
        function lpgConverter(valNum) {
            valNum = parseFloat(valNum);
            document.getElementById("lpg").innerHTML = (valNum * 2.33) ? (valNum * 2.33).toFixed(2) : 0;
            addHome();
